<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Home - Education Center</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex flex-column min-vh-100">

  <!-- Navbar -->
  <%- include('partials/_navbar') %>

  <!-- Content -->
  <div class="container my-5">
    <h2 class="text-center mb-4">All Courses</h2>

    <!-- Search -->
    <form class="d-flex mb-4" method="GET" action="/">
      <input type="text" name="search" class="form-control me-2" placeholder="Cari course..." value="<%= search || '' %>">
      <button class="btn btn-primary">Search</button>
    </form>

    <div class="row g-3">
      <% if (courses.length) { %>
        <% courses.forEach(course => { %>
          <div class="col-md-4">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= course.name %></h5>
                <p class="card-text"><%= course.description %></p>
                <p class="text-muted mb-2">Duration: <%= course.duration || '-' %> menit</p>
                <a href="/login" class="btn btn-sm btn-success">Login untuk mulai</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="text-center">Belum ada course tersedia.</p>
      <% } %>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partials/_footer') %>

</body>
</html>
