<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Kerjakan Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2 class="mb-4">Kerjakan Soal</h2>
    <form action="/home/student/<%= userId %>/course/<%= courseId %>/submit" method="POST">
      <% exercises.forEach(ex => { %>
        <div class="mb-3">
          <label class="form-label"><%= ex.question %></label>
          <input type="text" class="form-control" name="answer_<%= ex.id %>" required>
        </div>
      <% }) %>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</body>
</html>
