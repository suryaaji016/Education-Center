<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard Guru</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body { background-color: #f8f9fa; }
    .card { border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.08); }
    .table th { background-color: #212529; color: white; }
    .chart-container { max-width: 300px; margin: 0 auto; }
  </style>
</head>
<body class="d-flex flex-column min-vh-100">


  <%- include('partials/_navbar') %>

  <div class="container my-4">
    <h2 class="mb-4 text-center">ðŸ“Š Dashboard Guru</h2>

 
    <div class="row">
      <% chartDataPerCategory.forEach((cat, idx) => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <h5 class="mb-3">ðŸ“ˆ <%= cat.name %></h5>
              <div class="chart-container">
                <canvas id="chart-<%= idx %>"></canvas>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Tabel Skor Detail -->
    <div class="card mb-4">
      <div class="card-body">
        <h4 class="card-title mb-3">ðŸ“‹ Daftar Skor Siswa</h4>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Email</th>
              <th>Kategori</th>
              <th>Nilai</th>
            </tr>
          </thead>
          <tbody>
            <% if (scores.length) { %>
              <% scores.forEach(s => { %>
                <tr>
                  <td><%= s.User?.email %></td>
                  <td><%= s.Exercise?.Course?.Category?.name %></td>
                  <td><%= s.nilaiFinal %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-center">Belum ada skor siswa</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>


    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4 class="card-title">Daftar Kategori & Soal</h4>
          <a href="/teacher/<%= teacherId %>/exercise/add" class="btn btn-success btn-sm">
            + Tambah Soal
          </a>
        </div>

        <% if (categories.length) { %>
          <% categories.forEach(cat => { %>
            <h5 class="mt-3"><%= cat.name %></h5>
            <% if (cat.Courses.length) { %>
              <% cat.Courses.forEach(course => { %>
                <ul class="list-group mb-3">
                  <li class="list-group-item active"><%= course.name %></li>
                  <% if (course.Exercises.length) { %>
                    <% course.Exercises.forEach(ex => { %>
                      <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span><%= ex.question %></span>
                        <div>
                          <a href="/teacher/<%= teacherId %>/exercise/<%= ex.id %>/edit" class="btn btn-warning btn-sm me-2">Edit</a>
                          <form action="/teacher/<%= teacherId %>/exercise/<%= ex.id %>/delete" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                          </form>
                        </div>
                      </li>
                    <% }) %>
                  <% } else { %>
                    <li class="list-group-item">Belum ada soal</li>
                  <% } %>
                </ul>
              <% }) %>
            <% } else { %>
              <p class="text-muted">Belum ada course untuk kategori ini.</p>
            <% } %>
          <% }) %>
        <% } else { %>
          <p class="text-muted">Belum ada kategori.</p>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('partials/_footer') %>

  <script>
    <% chartDataPerCategory.forEach((cat, idx) => { %>
      new Chart(document.getElementById("chart-<%= idx %>").getContext("2d"), {
        type: 'bar',
        data: {
          labels: <%- JSON.stringify(cat.labels) %>,
          datasets: [{
            label: 'Nilai',
            data: <%- JSON.stringify(cat.scores) %>,
            backgroundColor: 'rgba(54, 162, 235, 0.6)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
          scales: { y: { beginAtZero: true, max: 100 } }
        }
      });
    <% }) %>
  </script>
</body>
</html>
