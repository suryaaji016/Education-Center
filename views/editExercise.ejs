<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Soal</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">✏️ Edit Soal</h2>

    <form action="/teacher/<%= teacherId %>/exercise/<%= exercise.id %>/edit" method="POST" class="card p-4">
      <div class="mb-3">
        <label class="form-label">Pertanyaan</label>
        <input type="text" name="question" class="form-control" value="<%= exercise.question %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Jawaban Benar</label>
        <input type="text" name="answerKey" class="form-control" value="<%= exercise.answerKey %>" required>
      </div>

      <div class="mb-3">
        <label class="form-label">Pilih Course</label>
        <select name="courseId" class="form-select" required>
          <% categories.forEach(cat => { %>
            <optgroup label="<%= cat.name %>">
              <% cat.Courses.forEach(course => { %>
                <option value="<%= course.id %>" <%= exercise.courseId === course.id ? "selected" : "" %>>
                  <%= course.name %>
                </option>
              <% }) %>
            </optgroup>
          <% }) %>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/home/teacher/<%= teacherId %>" class="btn btn-secondary">Batal</a>
    </form>
  </div>
</body>
</html>
